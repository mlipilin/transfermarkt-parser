{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "lerna run dev --scope demo",
    "eslint": "eslint --ignore-path .gitignore .",
    "lint": "npm run prettier -- --check && npm run eslint",
    "lint:fix": "npm run prettier -- --write && npm run eslint -- --fix",
    "prepare": "husky install",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(html|js|json|jsx|ts|tsx|yml)\"",
    "reinstall": "rm -rf node_modules package-lock.json packages/demo/node_modules packages/parser/node_modules && npm install --legacy-peer-deps",
    "storybook": "lerna run storybook --scope demo",
    "test": "lerna run test --scope demo"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^8.0.1",
    "lerna": "^6.0.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1"
  }
}
